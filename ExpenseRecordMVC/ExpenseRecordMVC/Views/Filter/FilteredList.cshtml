@model FilteredViewModel

@{
    ViewData["Title"] = "Filtered List";
}

<h1>Filtered List</h1>

<p>
    <a asp-action="AddExpense" asp-controller="Expense">Create New</a>
</p>
<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th>
                Date
            </th>
            <th>
                Amount
            </th>
            <th>
                Category Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.expenseViews) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount) ৳
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                    @Html.ActionLink("Edit", "Edit", "Expense", new { id = item.Id}, new{@class="bi bi-pen-fill"}) |
                    @Html.ActionLink("Details", "Details", "Expense", new { id = item.Id}, new {@class="bi bi-card-list"}) |
                    @Html.ActionLink("Delete", "Delete", "Expense", new { id = item.Id}, new { @class="bi bi-trash3-fill"})
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <dl>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FromDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FromDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ToDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ToDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalCost)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalCost) ৳
        </dd>
    </dl>
</div>