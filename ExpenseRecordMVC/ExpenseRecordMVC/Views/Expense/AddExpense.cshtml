@model ExpenseRecordMVC.Models.ExpenseAddModel

@{
    ViewData["Title"] = "AddExpense";
}

<h1>Add Expense</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form class="row g-3" asp-action="AddExpense" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input type="date" asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="CategoryName"></label>
                <select asp-for="CategoryName" class="form-control">
                    <option value="">Select your option</option>
                    @foreach (var x in Model.Categories)
                    {
                        <option value="@x"> @x </option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea type="text" asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit"  class="btn btn-primary" >
                    <i class="bi bi-file-earmark-plus-fill"></i> Add
                </button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ExpenseList">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
