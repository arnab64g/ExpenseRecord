@model DatabaseLayer.Entities.UserChoice

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>User Choice</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <input type="hidden" asp-for="Id"/>
            <input type="hidden" asp-for="Username"/>
            @Html.DisplayNameFor(model => model.CategoryName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
    </dl>
    
    <form class="row g-3" asp-action="Delete" method="post">
        <button type="submit" class="btn btn-danger newbtn">
            <i class="bi bi-trash3-fill"></i> Delete
        </button> <a asp-action="CategoryList">Back to List</a>
    </form>
</div>
<style>
    button.newbtn {
        width: 100px;
    }
</style>